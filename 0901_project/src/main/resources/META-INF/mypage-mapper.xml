<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="MyPageMapper">
	
	<delete id="memDelete" parameterType="kr.co.ictedu.util.dto.MemberDTO">
	delete from member
	where mno = #{mno}
	</delete>
	
	<select id="infoSelect" parameterType="java.lang.String" resultType="kr.co.ictedu.util.dto.MemberDTO">
	select mno, mid, mname, mpwd, post_code, maddr1, maddr2, mtel
	from member
	where mno = #{mno}
	</select>
	
	<update id="infoUpdate" parameterType="kr.co.ictedu.util.dto.MemberDTO">
	update member set mpwd = #{mpwd}
					, mtel = #{mtel}
	where mno = #{mno}
	</update>
	
</mapper>
